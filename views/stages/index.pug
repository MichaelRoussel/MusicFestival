extends ../layouts/main.pug
block content
  .container
    header
      h1= title

    div
      table.table.table-striped
        thead
          tr
            th Name
            th Location

        
        tbody
          each stage in stages
            tr
              td
                a(href=`/stages/${stage.id}`)= stage.name
              td= stage.location
              td
                a(href=`/stages/${stage.id}/edit`) edit
                = ` | `
                form.destroy(action=`/stages/destroy`, method="POST", onsubmit='return confirm("Are you sure you wish to destroy this stage?")')
                  input(type="hidden", name="id", value=`${stage.id}`)
                  input.destroy(type="submit", value="destroy")