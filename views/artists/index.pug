extends ../layouts/main.pug
block content
  .container
    header
      h1= title

    div
      table.table.table-striped
        thead
          tr
            th Name
            th Genre

        
        tbody
          each artist in artists
            tr
              td
                a(href=`/artists/${artist.id}`)= artist.name
              td= artist.genre
              td
                a(href=`/artists/${artist.id}/edit`) edit
                = ` | `
                form.destroy(action=`/artists/destroy`, method="POST", onsubmit='return confirm("Are you sure you wish to destroy this artist?")')
                  input(type="hidden", name="id", value=`${artist.id}`)
                  input.destroy(type="submit", value="destroy")